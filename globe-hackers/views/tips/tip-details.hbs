<section class="col-8 col-sm-6 col-md-6 col-lg-4 col-xl-2 container-sm" id="tip-details">
   <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{image}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="country">{{country}}</h5>
            <h5 class="city">{{city}}</h5>
            <p class="description">Description: {{description}}</p>
            <p class="category">Categories: {{category}}</p>
            <a href="/tips/{{this._id}}/edit" class="btn btn-primary">Edit</a>
            <a href="" class="btn btn-primary">Favourite</a>
            <form action="/tips/{{this._id}}/delete" method="POST">
                <button>Delete</button>
            </form>
        </div>
    </div>
</section>
