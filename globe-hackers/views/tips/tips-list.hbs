<section class="col-8 col-sm-6 col-md-6 col-lg-4 col-xl-2 container-sm" id="tip-details">
    <h1>Discover all of our amazing tips</h1>

    {{#each tipsArr}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{this.imageUrl}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="title">{{this.title}}</h5>
            <h6 class="country">{{this.country}}</h6>
            <h6 class="city">{{this.city}}</h6>
            <p class="description">Description: {{this.description}}</p>
            <p class="category">Categories: {{category}}</p>
            <form class="btn btn-primary" id="edit-button">
                <a href="/tips/tip/{{this._id}}" class="btn btn-primary">View details</a>
            </form>
            <form class="btn btn-primary" action="/tips/{{this._id}}/delete" method="POST" id="delete-button">
                <button class="btn btn-primary">Delete</button>
            </form>
        </div>
    </div>
    {{/each}}
</section>