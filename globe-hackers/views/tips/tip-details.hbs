<section class="col-8 col-sm-6 col-md-6 col-lg-4 col-xl-2 container-sm" id="tip-details">
    <div class="card" style="width: 22rem;">
        <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="title">{{title}}</h5>
            <h6 class="country">{{country}}</h6>
            <h6 class="city">{{city}}</h6>
            <p class="description">Description: {{description}}</p>
            <p class="category">Categories: {{category}}</p>
            <form class="btn btn-primary" id="edit-button">
                <a href="/tips/{{this._id}}/edit" class="btn btn-primary">Edit</a>
            </form>
            <form class="btn btn-primary" id="favourite-button" action="/tips/{{this._id}}/favourite" method="POST">
                <button href="" class="btn btn-primary">Favourite</button>
            </form>
            <form class="btn btn-primary" action="/tips/{{this._id}}/delete" method="POST" id="delete-button">
                <button class="btn btn-primary">Delete</button>
            </form>
        </div>
    </div>
</section>